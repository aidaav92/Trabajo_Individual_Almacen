<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:showDividers="middle" >

            <fragment class="es.uniovi.imovil.user.product.ProductListFragment"
                android:id="@+id/product_list_frag"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/product_details_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <fragment
                    class="es.uniovi.imovil.user.product.ProductDetailsFragment"
                    android:id="@+id/product_details_frag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
