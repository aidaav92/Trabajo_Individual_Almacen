<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.uniovi.imovil.user.product.ProductDetailsFragment">

    <LinearLayout
        android:id="@+id/LCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDescription"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <TextView
            style="@style/Subtitulo"
            android:layout_width="147dp"
            android:layout_height="67dp"
            android:text="@string/quantity"
            android:id="@+id/tvCantidad" />

        <TextView style="@style/Titulo"
            android:hint="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/textViewDescription"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProduct"
        android:gravity="center_horizontal">
        <TextView
            style="@style/Subtitulo"
            android:id="@+id/tvAddEs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/valor_add"/>

        <EditText
            style="@style/Normal"
            android:id="@+id/ed_e_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:numeric="integer"
            android:inputType="number"
            android:hint="Introduce valor"
            android:imeOptions="actionDone" />
    </LinearLayout>


    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/LCantidad"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/LAdd"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_gravity="center_horizontal|bottom">


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="input"
            android:id="@+id/buttonInput" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="output"
            android:id="@+id/buttonOutput"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>


</RelativeLayout>
